<WindowManager>:
    MainMenu:
    Login:
    Debit:



# **********************************************************************************************************************

<MainMenu>:
    name : "mainmenu"
    username : username
    password : password
    FloatLayout:
        #size : 300,300
        size_hint : 0.5,0.5
        #pos : (300,300)
        pos_hint : {'x':0.5, 'y':0.5}
        background_color : [1,0,0,1]
        Label :
            text : "Username:-->> "
            font_size : 25
            size_hint : 0.2, 0.3
            pos : 400,400


        TextInput :
            id : username
            write_tab : False
            multiline : False
            background_color : [0.5,0.5,0,1]
            focus : True
            size_hint : 0.24, 0.1
            pos : 600,430

        Label :
            text : "Password:-->> "
            font_size : 25
            size_hint : 0.2, 0.3
            pos : 400,320


        TextInput :
            id : password
            write_tab : False
            multiline : False
            password : True
            size_hint : 0.24, 0.1
            pos : 600,350


        Button :
            text : "Login"
            size_hint : (0.2, 0.1)
            pos : 450, 250
            on_press : root.check()



        Button :
            text : "Signup"
            size_hint : (0.2, 0.1)
            pos : 650, 250

        TextInput:
            pos_hint: {'x': 0.505455, 'y': 0.134286}
            size_hint_y: 0.1
            size_hint_x: 0.3
            text: 'Text Content'


# *********************************************************************************************************************

<Login>:
    name : 'login'

    FloatLayout :
        size : ['100dp','100dp']
        size_hint: [1/2, 1/2]
        pos_hint: {'x':0.2, 'y':0.3}
        color : [1,1,0,1]


        Button:
            text : "Debit"
            size_hint : [0.2,0.2]
            pos_hint : {'x':0.4, 'y':0.5}
            on_press :
                root.manager.transition.direction = 'left'
                root.manager.current = 'debit'

        Button:
            text : "Credit"
            size_hint : [0.2,0.2]
            pos_hint : {'x':0.7, 'y':0.5}

        Button:
            text : "Check Balance"
            size_hint : [0.2,0.2]
            pos_hint : {'x':0.4, 'y':0.25}

        Button :
            text : "Profile"
            size_hint : [0.2,0.2]
            pos_hint : {'x':0.7, 'y':0.25}

        Button:
            text : "Setting"
            size_hint : [0.2,0.2]
            pos_hint : {'x':0.5, 'y':0.01}

    Button:
        text : "Logout"
        size_hint : [0.1,0.1]
        pos_hint : {'right':1, 'top':1}


#******************************************************************************************************************
<Debit>
    name : 'debit'
    amount : amount
    FloatLayout:
        Label :
            text : "Amount"
            font_size : 25
            size_hint : [0.1,0.1]
            pos_hint : {'x':0.4, 'y':0.5}

        TextInput :
            id : amount
            multiline : False
            write_tab : False
            size_hint : [0.1,0.1]
            pos_hint : {'x':0.6, 'y':0.5}

        Button :
            text : "Back"
            size_hint : [0.1,0.1]
            pos_hint : {'x':0.4, 'y':0.3}
            on_press :
                root.manager.transition.direction = 'right'
                root.manager.current = 'login'


        Button :
            text : "Update"
            size_hint : [0.1,0.1]
            pos_hint : {'x':0.6, 'y':0.3}
            on_press : root.amount_check()



