<WindowManager>:
    MainMenu:
    Login:


# **********************************************************************************************************************

<MainMenu>:
    name : "mainmenu"
    username : username
    password : password
    FloatLayout:
        #size : 300,300
        size_hint : 0.5,0.5
        #pos : (300,300)
        pos_hint : {'x':0.5, 'y':0.5}
        background_color : [1,0,0,1]
        Label :
            text : "Username:-->> "
            font_size : 25
            size_hint : 0.2, 0.3
            pos : 400,400


        TextInput :
            id : username
            write_tab : False
            multiline : False
            background_color : [0.5,0.5,0,1]
            focus : True
            size_hint : 0.24, 0.1
            pos : 600,430

        Label :
            text : "Password:-->> "
            font_size : 25
            size_hint : 0.2, 0.3
            pos : 400,320


        TextInput :
            id : password
            write_tab : False
            multiline : False
            password : True
            size_hint : 0.24, 0.1
            pos : 600,350


        Button :
            text : "Login"
            size_hint : (0.2, 0.1)
            pos : 450, 250
            on_press : root.check()



        Button :
            text : "Signup"
            size_hint : (0.2, 0.1)
            pos : 650, 250


# *********************************************************************************************************************

<Login>:
    name : 'login'
    Label :
        text : "hello"


